            @Html.EditorFor(model => model.QuizPoints, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.QuizPoints, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Spremi" class="btn btn-default" />
        </div>
    </div>
</div>
