@model List<AutoskolaWeb.Model.Quiz>

<table id="tbl-quizzes" class="table table-condensed table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Quiz</th>
            <th>Quiz points</th>
            <th>Duration</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr quizId="@quiz.ID">
                <td>@quiz.ID</td>
                <td>@quiz.QuizName</td>
                <td>@quiz.QuizPoints</td>
                <td>@quiz.Duration</td>
                <td>@Html.ActionLink("Details", "Details", new { id = quiz.ID })</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = quiz.ID })</td>
                <td>@Html.ActionLink("Add question", "AddQuestion", new { id = quiz.ID })</td>
                <td><a href="javascript:void(0)" onclick="deleteRow(this);">Delete</a></td>
            </tr>
        }
        
    </tbody>
</table>
